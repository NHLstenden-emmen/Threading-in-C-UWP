<Page
    x:Class="Threading_in_C_UWP.Forms.LootScreenForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Threading_in_C_UWP.Forms"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button Content="Generate"  VerticalAlignment="Top" Margin="458,34,0,0" Click="GenerateItemButton_Click"/>
        <TextBox x:Name="AmountOfItems" HorizontalAlignment="Left" Margin="550,34,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top"/>
        <ListBox Margin="10,100,10,10" x:Name="SavedItemsListBox" DoubleTapped="SavedItemsListBox_DoubleTapped"/>
    </Grid>
</Page>
