<Page
    x:Class="Threading_in_C_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Threading_in_C_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <NavigationView x:ConnectionId='2' 
            x:Name="NavigationView" 
            PaneDisplayMode="Top" 
            IsBackButtonVisible="Collapsed"
                                             >
            <NavigationView.MenuItems>
                <NavigationViewItem x:ConnectionId='3' Tag="Home" Content="Home" x:Name="Home" />
                <NavigationViewItem x:ConnectionId='4' Tag="Players" Content="Players" x:Name="Players" />
                <NavigationViewItem x:ConnectionId='5' Tag="Map" Content="Map" x:Name="Map" />
                <NavigationViewItem x:ConnectionId='6' Tag="Monsters" Content="Monsters" x:Name="Monsters" />
                <NavigationViewItem x:ConnectionId='7' Tag="NPC" Content="NPC's" x:Name="NPC" />
                <NavigationViewItem x:ConnectionId='8' Tag="Loot" Content="Loot" x:Name="Loot" />
            </NavigationView.MenuItems>
            <ScrollViewer>
                <Frame x:ConnectionId='9' x:Name="ContentFrame" Padding="12,0,12,24" IsTabStop="True"
                                                                   />
            </ScrollViewer>
        </NavigationView>
    </Grid>
</Page>

